<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="container text-center mt-2 mb-4 p-2">
    <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <h1>Reported Sightings</h1>
      </div>
      <div class="col-sm-4"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>

    <div class="col-sm-8">
      <% if (typeof content === 'object' && content.length >= 1) { %> <%
      content.forEach(sighting => { %>
      <div class="card p-4 mb-3 shadow rounded">
        <h2><%= sighting.city %></h2>
        <small><%= sighting.text %> </small>
        <a href="/sighting/<%= index %>"><small>Read Report</small></a>
      </div>
      <% index += 1%> <% }) %> <% } %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
