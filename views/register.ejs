          type="text"
          id="username"
          class="form-control"
          placeholder="Username"
          required=""
          autofocus=""
          name="username"
        />
        <label for="inputPassword" class="sr-only">Password</label>
        <input
          type="password"
          id="inputPassword"
          class="form-control"
          placeholder="Password"
          required=""
          name="password"
        />

        <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">
          Sign in
        </button>
