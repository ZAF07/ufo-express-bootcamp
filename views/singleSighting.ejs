<%- include('./partials/header.ejs') %>

<div class="container mt-4 p-4">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <div class="card p-4 shadow rounded">
        <h2><%= singleSighting.city %></h2>
        <p><%= singleSighting.text %></p>

        <form action="/del/<%=index%>?__method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE" />

          <a class="btn btn-sm btn-info" href="/sighting/<%=index%>/edit"
            ><small>Edit Article</small></a
          >
          <input
            class="btn btn-danger btn-sm"
            type="submit"
            value="Delete Article"
          />
        </form>
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
