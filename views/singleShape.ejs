<%- include('./partials/header.ejs') %>
<div class="container mt-4 p-3">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 text-center">
      <h1><%= shapeRequested %></h1>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

<div class="container mt-3 p-3">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <% if (shapesToSend.length > 0) { %> <% shapesToSend.forEach(shape => { %>
      <div class="card p-4 shadow rounded mb-3">
        <h2><%= shape.city %></h2>
        <p><%= shape.text %></p>
        <a href="/sighting/<%=shape.index%>/edit"
          ><small>Edit Article</small></a
        >
      </div>
      <% }) %> <% } %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
