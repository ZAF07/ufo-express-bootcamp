<%- include('./partials/header.ejs') %> <% if (shapesRecieved.length > 0) { %>

<div class="container mt-2 p-3">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 text-center">
      <h1><%= header %></h1>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

<div class="container mt-2 p-3">
  <div class="row">
    <div class="col-sm-2"></div>

    <div class="col-sm-8">
      <% shapesRecieved.forEach(shape => { %>
      <div class="card p-4 mb-3 shadow rounded">
        <h3><%= shape.shape %></h3>
        <h5>Summary:</h5>
        <small><%= shape.summary %></small>
        <a href="/sighting/<%= shape.i %>"><small>Read This Report</small></a>
        <a href="/shapes/<%=shape.shape%>"
          ><small>View all reports of this shape</small></a
        >
      </div>

      <% }) %> <% } %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
